<?xml version="1.0" encoding="UTF-8"?>
<!-- t-esc : interprets javascript, escapes html characters -->
<!-- contraire : t-raw -->
<!-- t-if, t-foreach et t-as -->
<!-- https://doc.openerp.com/trunk/web/qweb/ -->

<templates xml:space="preserve">

    <t t-name="bank_statement_reconciliation">
        <div class="oe_form_sheetbg"><div class="oe_form_sheet oe_form_sheet_width">
            <h1><t t-esc="statement_name"/></h1>
            <!--<progress class="global_progress" value="0" t-att-max="total_lines">0%</progress>-->
            <div class="progress progress-striped">
            	<div class="progress-text"><span class="valuenow">0</span> / <span class="valuemax"><t t-esc="total_lines"/></span></div>
            	<div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" t-att-aria-valuemax="total_lines" style="width: 0%;">
            	</div>
            </div>
            <div class="oe_clear"></div>
            <div class="reconciliation_lines_container"></div>
            <p class='protip'>Tip : Hit ctrl-enter to validate the whole sheet.</p>
        </div></div>
    </t>
    
    <t t-name="bank_statement_reconciliation_done_message">
        <div class='done_message'>
            <h2><t t-raw="title" /></h2>
            <p>It took you <strong><t t-esc="time_taken" /></strong> to reconcile <strong><t t-esc="transactions_done" /> transactions.<br/></strong> That's on average <t t-esc="sec_per_item" /> seconds per transaction.</p>
            <t t-if="done_with_ctrl_enter !== 0">
                <p>You validated <t t-esc="done_with_ctrl_enter" /> reconciliations with the ctrl-enter shortcut.</p>
            </t>
            <p class='achievements'>
                <t t-foreach="achievements" t-as="achievement">
                    <i class='fa fa-certificate achievement' t-att-data-title='achievement.title' t-att-data-content='achievement.desc'><i t-att-class="'fa '+achievement.icon"></i></i>
                </t>
            </p>
        </div>
    </t>
    
    <t t-name="bank_statement_reconciliation_line">
        <table class="oe_bank_statement_reconciliation_line" t-att-data-mode="widget.q_mode">
            <tr>
                <td>
                    <table class="accounting_view">
                        <caption>
                            <button class="button_ok"></button>
                            <span class="partner"><t t-esc="widget.st_line.partner_id[1]"/> <span class="editPartner glyphicon glyphicon-pencil"></span></span>
                        </caption>
                        <tr class="initial_line">
                            <td><span class="toggle_match glyphicon glyphicon-cog"></span></td>
                            <td><t t-esc="widget.st_line.q_account_num"/></td>
                            <td><t t-esc="widget.st_line.date"/></td>
                            <td><t t-esc="widget.st_line.name"/></td>
                            <td></td>
                            <td><t t-esc="widget.st_line.q_amount"/></td>
                            <!-- TODO : t-call ? -->
                            <td><span class="line_info_button glyphicon glyphicon-info-sign" t-att-data-content="widget.st_line.q_popover"></span></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="action_pane create">
                        <div class="btn-group btn-group-sm quickAdd">
                            <button type="button" class="btn btn-default" data-type="escompte">Escompte</button>
                            <button type="button" class="btn btn-default" data-type="diffChange">Diff√©rence de change</button>
                            <button type="button" class="btn btn-default" data-type="pertesEtProfits">Pertes et profits</button>
                        </div>
        
                        <table class="oe_form">
                            <tr>
                                <td>Account</td><td class="create_account" style="position: relative; overflow: hidden;"></td>
                                <td>Label</td><td><input type="text" class="create_label oe_form_required"/></td>
                            </tr>
                            <tr>
                                <td>Tax</td><td><input type="text" class="create_tax"/></td>
                                <td>Amount</td><td><input type="text" class="create_amount oe_form_required"/></td>
                            </tr>
                            <tr>
                                <td>Analytical Acc.</td><td><input type="text" class="create_analytical_account"/></td>
                                <td></td><td><div class="add_line"><a href="#">New</a></div></td>
                            </tr>
                        </table>
                    </div>
                    
                    <div class="action_pane currency"></div>
                    
                    <div class="action_pane active match folded">
                        <div class="match_extended_controls" data-pagerindex="0">
                            <input type="text" class="filter" placeholder="Filter" value="" />
                            <span class="pull-right pagerControlRight glyphicon glyphicon-chevron-right"></span>
                            <span class="pull-right pagerControlLeft glyphicon glyphicon-chevron-left"></span>
                        </div>
                        <table></table>
                        <a href="#" class="show_more"></a>
                    </div>
                </td>
            </tr>
        </table>
    </t>
    
    <t t-name="bank_statement_reconciliation_line_details">
        <table class='details'>
            <tr><td>Date</td><td><t t-esc="line.date"/></td></tr>
            <tr><td>Nom</td><td><t t-esc="line.partner_id[1]"/></td></tr>
            <tr><td>Type</td><td><t t-esc="line.type"/></td></tr>
            <tr><td>Transaction</td><td>TODO</td></tr>
            <tr><td>Label</td><td>TODO</td></tr>
            <tr><td>Montant en <t t-esc="line.q_currency"/></td><td><t t-esc="line.q_amount"/></td></tr>
            <tr><td>Compte</td><td><t t-esc="line.account_id[1]"/></td></tr>
        </table>
    </t>
    
    <t t-name="bank_statement_reconciliation_move_line">
        <tr class="mv_line" t-att-data-lineid="line.id" t-att-data-selected="selected">
            <td><span class="glyphicon glyphicon-add-remove"></span></td>
            <td><t t-esc="line.q_account_num"/></td>
            <td><t t-esc="line.q_due_date"/></td>
            <td><t t-esc="line.ref"/> : <t t-esc="line.name"/></td>
            <td><t t-esc="line.q_debit"/></td>
            <td><t t-esc="line.q_credit"/></td>
            <td><span class="line_info_button glyphicon glyphicon-info-sign" t-att-data-content="line.q_popover"></span></td>
        </tr>
    </t>
    
    <t t-name="bank_statement_reconciliation_move_line_details">
        <table class='details'>
            <tr><td>Account</td><td><t t-esc="line.account_id[1]"/></td></tr>
            <tr><td>Journal</td><td><t t-esc="line.journal_id[1]"/></td></tr>
            <tr><td>Period</td><td><t t-esc="line.period_id[1]"/></td></tr>
            <tr><td>Date</td><td><t t-esc="line.date"/></td></tr>
            <tr><td>Due Date</td><td><t t-esc="line.q_due_date"/></td></tr>
            <tr><td>Amount</td><td><t t-esc="line.q_amount"/></td></tr>
        </table>
    </t>
    
    <t t-name="bank_statement_reconciliation_created_line">
        <tr class="created_line" t-att-data-lineid="line.id" t-att-data-selected="selected">
            <td><span class="line_remove_button glyphicon glyphicon-remove"></span></td>
            <td><t t-esc="line.account_num"/></td>
            <td></td>
            <td><t t-esc="line.label"/></td>
            <td><t t-esc="line.q_debit"/></td>
            <td><t t-esc="line.q_credit"/></td>
            <td></td>
        </tr>
    </t>
    
    <t t-name="bank_statement_reconciliation_line_open_balance">
        <tr class="line_open_balance">
            <td><span class="toggle_create glyphicon glyphicon-play"></span></td>
            <td>401000</td>
            <td></td>
            <td>Open balance</td>
            <td><t t-esc="debit"/></td>
            <td><t t-esc="credit"/></td>
            <td></td>
        </tr>
    </t>
</templates>